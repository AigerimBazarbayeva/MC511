<?xml version="1.0" encoding="utf-8"?>
<android.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="5"
    android:columnCount="1"
    tools:context=".activities.MainActivity"
    android:background="#FFFFFF">

    <fh.ooe.mcm.inactivitytracker.ui.CircleButton
        android:id="@+id/dataEntryButton"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_row="0"
        android:layout_rowWeight="3"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_marginTop="30dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:src="@drawable/data_entry_logo"
        app:cb_color="#FFF"
        app:cb_pressedRingWidth="5dip"
        app:cb_strokeColor="@color/colorPrimary"
        app:cb_strokeWidth="5dip" />

    <fh.ooe.mcm.inactivitytracker.ui.CircleButton
        android:id="@+id/chartingButton"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_row="1"
        android:layout_rowWeight="3"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:src="@drawable/pie_chart_logo"
        app:cb_color="#FFF"
        app:cb_pressedRingWidth="5dip"
        app:cb_strokeColor="@color/colorPrimary"
        app:cb_strokeWidth="5dip" />

    <fh.ooe.mcm.inactivitytracker.ui.CircleButton
        android:id="@+id/predictionButton"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:layout_row="2"
        android:layout_rowWeight="3"
        android:layout_column="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:src="@drawable/prediction"
        app:cb_color="#FFF"
        app:cb_pressedRingWidth="5dip"
        app:cb_strokeColor="@color/colorPrimary"
        app:cb_strokeWidth="5dip" />

    <android.support.v7.widget.SwitchCompat
        android:theme="@style/Switch"
        android:id="@+id/trackingSwitch"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_columnWeight="2"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_rowWeight="2"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:fontFamily="serif"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:text="Tracking:"
        android:layout_gravity="center_vertical"
        android:textAllCaps="false"/>

</android.widget.GridLayout>